{
    "version": "0.2.0",
    "configurations": [
		{
			"name": "debug linux",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/miniRT",
			"args": ["assets/scenes/invalid/wrong_numbers.rt"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
    ]
}
